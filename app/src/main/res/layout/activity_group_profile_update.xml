<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amitk.mobilecon.GroupProfileUpdate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/gpro"
        android:elevation="10dp"
        android:background="#C3C3C3">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groupdp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/team"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/txtgname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/groupdp"
            android:text="Group Name"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_edit"
            android:layout_toRightOf="@+id/txtgname"
            android:id="@+id/imageView2" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gpro"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/btnExit">
    </ListView>
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit Group"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:textColor="#FF0000"/>

</RelativeLayout>
